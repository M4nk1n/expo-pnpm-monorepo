{
  "name": "expo-pnpm-monorepo",
  "version": "0.0.1",
  "private": true,
  "description": "Expo Workspace with pnpm",
  "packageManager": "pnpm@8.6.9",
  "engines": {
    "node": ">=16.9.0",
    "pnpm": ">=7.4.0"
  },
  "scripts": {
    "dev:native": "pnpm --filter @apps/expo start",
    "dev:web": "pnpm --filter @apps/next dev",
    "bootstrap": "pnpm install",
    "prepare": "husky install",
    "rebuild:tsc": "pnpm clean:tsc && pnpm --filter '@shared/*' -r run build",
    "clean:tsc": "pnpm --filter '@shared/*' -r run clean",
    "clean:cache": "watchman watch-del-all & rimraf $TMPDIR/metro-* $TMPDIR/haste-*",
    "clean:build": "pnpm clean:cache && find . -maxdepth 3 -type dir -name node_modules -prune -o -name .expo -print -o -name .next -print -o -name dist -print | xargs rimraf",
    "clean:lib": "pnpm clean:build && pnpm clean:tsc && find . -maxdepth 3 -type dir -name node_modules -print | xargs rimraf",
    "format": "pretty-quick --staged && lint-staged",
    "lint:eslint": "eslint --cache --max-warnings 0 \"{src,mock}/**/*.{vue,ts,tsx}\" --fix",
    "lint:prettier": "prettier --write \"src/**/*.{js,json,tsx,css,less,scss,vue,html,md}\"",
    "lint:stylelint": "stylelint --cache --fix \"**/*.{vue,less,postcss,css,scss}\" --cache --cache-location node_modules/.cache/stylelint/",
    "lint:lint-staged": "lint-staged"
  },
  "devDependencies": {
    "@babel/core": "^7.20.0",
    "@babel/runtime": "^7.20.0",
    "@babel/preset-env": "^7.20.0",
    "@commitlint/cli": "^17.0.2",
    "@commitlint/config-conventional": "^17.0.2",
    "@types/react": "~18.2.14",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint": "^8.15.0",
    "eslint-plugin-react": "^7.30.0",
    "eslint-plugin-react-hooks": "^4.5.0",
    "eslint-plugin-react-native": "^4.0.0",
    "husky": "^8.0.1",
    "lint-staged": "^13.0.1",
    "markdownlint": "^0.29.0",
    "markdownlint-cli2": "^0.8.0",
    "prettier": "^2",
    "pretty-quick": "^3.1.3",
    "rimraf": "latest",
    "stylelint": "^15.10.0",
    "stylelint-config-recommended": "^13.0.0",
    "stylelint-config-standard": "^34.0.0",
    "stylelint-order": "^6.0.0",
    "typescript": "^5.1.3"
  }
}
